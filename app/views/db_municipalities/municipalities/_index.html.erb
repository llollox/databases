<%= render "layouts/header_index", :subclass => "Municipality" %>

<% if !@municipalities.empty? %>
    <div id="pagination_table">
    <table class="table table-hover table-striped">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Population</th>
        <% if current_user %>
            <th></th>
            <th></th>
        <% end %>
      </tr>

    <% @municipalities.each_with_index do |municipality,index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= link_to municipality.name, municipality, :class => "show-loading" %></td>
        <td><%= municipality.population %></td>
        <% if current_user %>
            <td><%= link_to 'Edit', edit_municipality_path(municipality), 
                :class => "btn btn-primary" %></td>
            <td><%= link_to 'Destroy', municipality, method: :delete, data: { confirm: 'Are you sure?' },
                :class => "btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
    </table>
    </div>
<% else %>
<p class="muted">
  <i>No municipalities for this province!</i>
</p>
<% end %>
<br />