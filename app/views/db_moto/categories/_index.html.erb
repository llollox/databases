<%= render "layouts/header_index" %>

<div id="pagination_table">
  <table class="table table-striped">
    <tr>
      <th>#</th>
      <th>Name</th>
      <% if current_user %>
        <th></th>
        <th></th>
      <% end %>
    </tr>

    <% @categories.each_with_index do |category,index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= category.name %></td>
      <% if current_user %>
        <td><%= render "buttons/edit", :item => category %></td>
        <td><%= render "buttons/delete", :item => category %></td>
      <% end %>
    </tr>
    <% end %>
    
  </table>
</div> 
